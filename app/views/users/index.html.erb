<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-1">
    <h3>Users</h3>
  </div>
</div>
<a class="pure-button" href="/users/new">New User</a>

<table class="pure-table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Permission</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.username %></td>
        <td class="permission" id="<%= user.id %>"><%= user.permission %></td>
         <td>
           <a class="pure-button" href="/users/<%= user.id %>/edit">Edit</a>
           <span style="display: inline-block"><%= button_to "Remove", user_path(user), method: :delete, :class => "pure-button" %></span>
         </td>
      </tr>
    </tbody>
  <% end %>

</table>
