<div class="row">
  <div class="twelve columns">
    <h1>Edit Menu Items</h1>
  </div>
</div>
<div class="row">
  <%= form_for @menu_item do |f| %>
  <div class="three columns">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="three columns">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="three columns">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="two columns">
    <%= f.label :submit %>
    <%= f.submit %>
  </div>
  <% end %>
</div>
