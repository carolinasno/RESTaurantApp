<div class="pure-g">
  <div class="pure-u-1-1">
    <h3>Edit Menu Items</h3>
  </div>
</div>

<%= form_for @menu_item, html: {class: 'pure-form pure-form-aligned'} do |f| %>
  <fieldset>
    <div class="pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="pure-control-group">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="pure-control-group">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
    <div class="pure-control-group">
      <%= f.submit :class => "pure-button" %>
    </div>
  </fieldset>
<% end %>
