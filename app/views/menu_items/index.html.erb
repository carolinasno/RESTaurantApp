  <div class="row" id="main-menus">
    <div class="four columns">
      <a class="button" href="/">Home</a>
    </div>
    <div class="four columns">
      <a class="button" href="/profile">Profile</a>
    </div>
    <div class="four columns">
      <%= button_to "Log Out", sessions_path, method: :delete %>
    </div>
  </div>
  <div class="row">
    <div class="four columns">
      <a class="button" href="/parties">Parties</a>
    </div>
    <div class="four columns">
      <a class="button" href="/menu_items">Menu Items</a>
    </div>
    <div class="four columns">
      <a class="button" href="/order_tickets">Order Tickets</a>
    </div>
  </div>
<br>
  <div class="row">
    <div class="twelve columns">
      <h3>Menu Items</h3>
    </div>
  </div>

  <div class="row">
    <%= form_for @menu_item do |f| %>
    <div class="three columns">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Name" %>
    </div>
    <div class="three columns">
      <%= f.label :description %>
      <%= f.text_field :description, :placeholder => "Description" %>
    </div>
    <div class="three columns">
      <%= f.label :price %>
      <%= f.number_field :price, :placeholder => "Price" %>
    </div>
    <div class="two columns">
      <%= f.label :submit %>
      <%= f.submit %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <ul>
      <% @menu_items.each do |menu_item| %>
        <li>
          <div class="eight columns">
            <%= menu_item.name %>, <%= menu_item.description %>, $<%= menu_item.price %>
          </div>
          <div class="two columns">
            <%= button_to "Edit", edit_menu_item_path(menu_item), method: :edit %>
          </div>
          <div class="two columns">
            <%= button_to "Remove", menu_item_path(menu_item), method: :delete %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
