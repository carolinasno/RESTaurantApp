<div class="row">
  <div class="twelve columns">
    <h1>Menu Items</h1>
  </div>
</div>
<div class="row">
  <%= form_for @menu_item do |f| %>
  <div class="three columns">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="three columns">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="three columns">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div class="two columns">
    <%= f.label :submit %>
    <%= f.submit %>
  </div>
  <% end %>
</div>

<div class="row">
  <ul>
    <% @menu_items.each do |menu_item| %>
      <li>
        <div class="eight columns">
          <%= menu_item.name %>, <%= menu_item.description %>, $<%= menu_item.price %>
        </div>
        <div class="two columns">
          <%= button_to "Edit", edit_menu_item_path(menu_item), method: :edit %>
        </div>
        <div class="two columns">
          <%= button_to "Remove", menu_item_path(menu_item), method: :delete %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
