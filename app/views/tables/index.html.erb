<div class="row">
  <div class="twelve columns">
    <h1>Tables</h1>
  </div>
</div>
<div class="row">
  <%= form_for @table do |f| %>
  <div class="three columns">
    <%= f.label :table_number %>
    <%= f.text_field :table_number %>
  </div>
  <div class="three columns">
    <%= f.label :number_of_seats %>
    <%= f.number_field :number_of_seats %>
  </div>
  <div class="three columns">
    <%= f.label :server %>
    <%= f.collection_select(:user_id, User.all, :id, :username) %>
  </div>
  <div class="three columns">
    <%= f.label :submit %>
    <%= f.submit %>
  </div>
  <% end %>
</div>

<div class="row">
  <ul>
    <% @tables.each do |table| %>
      <div class="eight columns">
        <li>
          <strong>Table Number:</strong> <%= table.table_number %>, <strong>Number of Seats:</strong> <%= table.number_of_seats %>, <strong>Server: </strong> <%= table.user_id %>
        </li>
      </div>
      <div class="two columns">
        <%= button_to "Edit", edit_table_path(table), method: :edit %>
      </div>
      <div class="two columns">
        <%= button_to "Remove", table_path(table), method: :delete %>
      </div>
    <% end %>
  </ul>
</div>
