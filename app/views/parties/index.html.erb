 <style media="screen">
   .table-ticket{
     border: 1px solid black;
   }

 </style>

<% @parties.each do |party| %>

   <section class="table-ticket">
     <h5>Party Name: <% party.name %></h5>
     <p>
       Server: <%= party.user.username %>
     </p>
     <p>
       Table Number: <%= party.table.table_number %>
     </p>
     <ul>
       <% party.menu_items.each do |item| %>
        <li>
          <%= item.name %>: <%= '%.2f' % item.price %>
        </li>
       <% end %>
     </ul>
     <h6>Total: $13</h6>
   </section>

<% end %>


