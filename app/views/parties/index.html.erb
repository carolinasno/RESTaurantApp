<div class="pure-g">
  <div class="pure-u-1-1">
    <h3>Parties</h3>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1-1">
    <a class="pure-button" href="/parties/new">New Party</a>
  </div>
</div>

  <table class="pure-table">
    <thead>
      <tr>
        <th>Party Name</th>
        <th>Party Size</th>
        <th>Server</th>
        <th>Order</th>
        <th>Subtotal</th>
        <th>Edit</th>
      </tr>
    </thead>
    <% @parties.each do |party| %>
      <tbody>
        <tr>
          <td><a href="/parties/<%= party.id %>"><%= party.name %></a></td>
          <td><%= party.guests %></td>
          <td><%= party.user.username %></td>
          <td>
            <% party.menu_items.each do |item| %>
              <li>
                <%= item.name %>: $<%= '%.2f' % item.price %>
              </li>
            <% end %>
          </td>
          <td>
             <% price = party.menu_items.sum(:price) %>
             $<%= '%.2f' % price %>
           </td>
           <td>
             <a class="pure-button" href="/parties/<%= party.id %>/edit">Edit Party</a>
           </td>
        </tr>
      </tbody>
    <% end %>
  </table>
