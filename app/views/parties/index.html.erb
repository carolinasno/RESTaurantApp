<style media="screen">
 .table-ticket{
   border: 1px solid black;
   margin: 0 auto;
   margin-top: 20px;
   margin-botton: 20px;
   padding-bottom: 20px;
   width: 30%;
   heigh: 30%;
 }
</style>

<% @parties.each do |party| %>
 <section class="table-ticket">
   <h4>Party Name: <a href="/parties/<%= party.id %>"><%= party.name %></a></h4>
   <p><strong>Server:</strong> <%= party.user.username %></p>
   <li><u>Order</u></li>
     <% party.menu_items.each do |item| %>
      <li>
        <%= item.name %>: $<%= '%.2f' % item.price %>
      </li>
    <% end %>
    <br>
   <% price = party.menu_items.sum(:price) %>
   <li>Sub Total: $<%= '%.2f' % price %></li>
   <li>Tax: $<%= '%.2f' % (price * 0.09) %></li>
   <li>Total: $<%= '%.2f' % ((price) + (price * 0.09)) %></li>
   <br>
  <a class="pure-button" href="/parties/<%= party.id %>/edit">Edit Party</a>

 </section>
<% end %>
