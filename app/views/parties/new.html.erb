<div class="pure-g">
  <div class="pure-u-1-1">
    <h3>New Parties</h3>
  </div>
</div>

<%= form_for @party, html: {class: "pure-form pure-form-aligned"} do |f| %>
  <fieldset>
    <div class="pure-control-group">
      <%= f.label :table_number %>
      <%= f.text_field :table_number, :placeholder => "ex. A1" %>
    </div>
    <div class="pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Party Name" %>
    </div>
    <div class="pure-control-group">
      <%= f.label :guests %>
      <%= f.number_field :guests, :placeholder => "Number of Guests", :min => 0 %>
    </div>
    <div class="pure-control-group">
      <%= f.label :server %>
      <%= f.collection_select(:user_id, User.all, :id, :username) %>
    </div>
    <div class="pure-control-group">
      <%= f.submit :class => "pure-button" %>
    </div>
  </fieldset>
<% end %>

</div>
