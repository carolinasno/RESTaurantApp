<div class="container">

  <div class="row" id="main-menus">
    <div class="four columns">
      <a class="button" href="/">Home</a>
    </div>
    <div class="four columns">
      <a class="button" href="/profile">Profile</a>
    </div>
    <div class="four columns">
      <%= button_to "Log Out", sessions_path, method: :delete %>
    </div>
  </div>

  <div class="row">
    <div class="twelve columns">
      <h3>New Parties</h3>
    </div>
  </div>

  <div class="row">
    <%= form_for @party do |f| %>
    <div class="three columns">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Party Name" %>
    </div>
    <div class="three columns">
      <%= f.label :guests %>
      <%= f.number_field :guests, :placeholder => "Number of Guests" %>
    </div>
    <div class="three columns">
      <%= f.label :server %>
      <%= f.collection_select(:user_id, User.all, :id, :username) %>
    </div>
    <div class="two columns">
      <%= f.label :submit %>
      <%= f.submit %>
    </div>
    <% end %>
  </div>

  <div class="row">
    <div class="three columns">
      <h6>Party Name</h6>
    </div>
    <div class="three columns">
      <h6>Number of Guests</h6>
    </div>
    <div class="two columns">
      <h6>Server</h6>
    </div>
    <div class="two columns">
      <h6>Edit</h6>
    </div>
    <div class="two columns">
      <h6>Remove</h6>
    </div>
  </div>

  <% @parties.each do |party| %>
  <div class="row">
    <div class="three columns">
      <li>
        <%= party.name %>
      </li>
    </div>
    <div class="three columns">
      <li>
        <%= party.guests %>
      </li>
    </div>
    <div class="two columns">
      <li>
        <%= party.user.username %>
      </li>
    </div>
    <div class="two columns">
      <%= button_to "Edit", edit_party_path(party), method: :edit %>
    </div>
    <div class="two columns">
      <%= button_to "Remove", party_path(party), method: :delete %>
    </div>
  </div>

  <% end %>
</div>
