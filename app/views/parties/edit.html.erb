<div class="row">
  <div class="twelve columns">
    <h3>Edit Party</h3>
  </div>
</div>
<div class="row">
  <%= form_for @party do |f| %>
    <div class="three columns">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="three columns">
      <%= f.label :guests %>
      <%= f.number_field :guests %>
    </div>
    <div class="three columns">
      <%= f.label :user %>
      <%= f.collection_select(:user_id, User.all, :id, :username) %>
    </div>
    <div class="two columns">
      <%= f.label :submit %>
      <%= f.submit %>
    </div>
  <% end %>
</div>
